{
  // ===================================================================
  // VS Code 사용자 로컬 설정
  // -------------------------------------------------------------------
  // 이 설정은 개인 개발 환경에만 적용되며, .code-workspace 설정보다
  // 우선순위가 낮습니다. 팀 전체에 적용할 설정은 .code-workspace 파일에
  // 작성하는 것을 권장합니다.
  // ===================================================================

  // --- 창 및 편집기 동작 설정 ---

  // 폴더를 열 때 새 창으로 열지 여부를 결정합니다.
  // "on": 새 창에서 열기
  // "off": 현재 창에서 열기
  "window.openFoldersInNewWindow": "off",

  // VS Code 시작 시 표시되는 초기 편집기 화면을 설정합니다.
  // "none": 아무것도 표시하지 않음
  "workbench.startupEditor": "none",

  // --- 파일 저장 및 포맷팅 설정 ---

  // 파일 자동 저장 시점을 설정합니다.
  // "onWindowChange": VS Code 창의 포커스가 바뀔 때 자동 저장
  "files.autoSave": "onWindowChange",

  // 파일을 저장할 때마다 자동으로 코드 포맷팅을 실행합니다.
  "editor.formatOnSave": true
}
